---
import SiteFooter from '../components/SiteFooter.astro';
import SiteHeader from '../components/SiteHeader.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&display=swap" rel="stylesheet">
	</head>
	<body>
		<SiteHeader />
		<slot />
		<SiteFooter />
	</body>
</html>
<style>
	:root {
		--fontSizebase: 0.675em;
		--fontSizeS: 1.4rem;
		--fontSizeM: 1.6rem;
		--fontSizeL: 2.2rem;
		--fontSizeXl: 2.4rem;
		--lineHeight: 1.5;

		/* Colors */
		--pageBackground: #fff;
		--contrastBackground: #444;
		--textPrimary: #444;
		--textSecondary: #666;
		--textContrast: #fff;
		--borderRadiusSmall: 0.25rem;
		--borderRadiusLarge: 0.75rem;
		--overlayBackground: rgba(0,0,0,0.5);

		/* Widths */
		--wrapperWidth: 1024px;
		--wrapperWidthInner: 60ch;
	}

	html {
		font-family: 'Cabin', system-ui, sans-serif;
		font-size: var(--fontSizebase);
		color: var(--textPrimary);
		background-color: var(--pageBackground);
	}

	body {
		margin: 0;
		line-height: var(--lineHeight);
		font-size: var(--fontSizeM);
	}


</style>

<style is:global>
	h1, h2, h3 {
		text-transform: uppercase;
		letter-spacing: 0.09em;
	}
	h1 {
		font-size: var(--fontSizeXl);
	}

	h2 {
		font-size: var(--fontSizeL);
	}
	h3 {
		font-size: var(--fonSizeM) 
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
