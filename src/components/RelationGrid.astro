---
import Wrapper from "./Wrapper.astro";
import SectionHeading from "./Typography/SectionHeading.astro";

const { title } = Astro.props;
---
<div class="relationGrid">
    <Wrapper>
        {title && <SectionHeading title={title} />}
        <div class="grid">
            <slot />
        </div>
    </Wrapper>
</div>

<style>
    .relationGrid {
        background: linear-gradient(89.96deg, rgba(255, 255, 255, 0) 0.05%, rgba(255, 255, 255, 0) 9.41%, rgba(255, 255, 255, 0.13) 34.91%, rgba(255, 255, 255, 0) 48.97%, rgba(255, 255, 255, 0.13) 99.97%), linear-gradient(89.96deg, rgba(255, 255, 255, 0) 0.05%, rgba(255, 255, 255, 0) 60.14%, rgba(255, 255, 255, 0.23) 77.41%, rgba(255, 255, 255, 0) 94.88%, rgba(255, 255, 255, 0) 99.97%), #88DFD7;
        text-align: center;
        display: flex;
        justify-content: center;
        padding: 0 0 8rem;
    }
    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(30rem, 1fr));
        gap: 1.6rem;
        grid-auto-rows: minmax(20rem, auto);
        width: 100%;        
    }
</style>